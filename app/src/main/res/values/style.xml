<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MeasureFont">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PulseFont" parent="MeasureFont">
        <item name="android:textColor">#99000000</item>
    </style>
    <style name="TimeFont" parent="PulseFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DateFont" parent="PulseFont">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogEditorFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogHintFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4B000000</item>
    </style>

    <style name="DialogButtonFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>